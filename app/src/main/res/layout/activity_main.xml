<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:id="@+id/btn_park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박서준"/>
        <Button
            android:id="@+id/btn_exo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="엑소"/>
        <Button
            android:id="@+id/btn_hama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우주하마"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_park"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9EDF52"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/seojunpark"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_exo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5DA2D8"
            android:visibility="invisible"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/exo"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_hama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C979D6"
            android:visibility="invisible"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/uzuhama"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>